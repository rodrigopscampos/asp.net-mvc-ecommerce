@model AspNetMvcEcommerce.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Mude as configurações da sua conta</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Senha:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Mudar a senha", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Criar Senha", "SetPassword")
            }
            ]
        </dd>
    </dl>
</div>
