@model AspNetMvcEcommerce.Models.CestaDeCompra
@{
    ViewBag.Title = "Parabéns!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Parabéns</h2>
<div class="alert alert-success">
    A compra foi realizada com sucesso ! :)
</div>

<h4>Dados da entrega:</h4>

<table class="table table-striped table-bordered ">
    <thead>
        <tr>
            <td> Produto </td>
            <td> Quantidade </td>
            <td> Valor Total </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Itens.Values)
        {
            <tr>
                <td>@item.NomeDoProduto </td>
                <td>@item.Quantidade </td>
                <td>@String.Format(System.Globalization.CultureInfo.GetCultureInfo("pt-BR"), "{0:C}", item.PrecoTotal) </td>
            </tr>
        }

        <tr>
            <td colspan="2"><strong>Total</strong> </td>
            <td>
                <strong>
                    @String.Format(System.Globalization.CultureInfo.GetCultureInfo("pt-BR"), "{0:C}", Model.PrecoTotal)
                </strong>
            </td>
        </tr>
    </tbody>
</table>

<hr />
