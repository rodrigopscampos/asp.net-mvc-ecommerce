<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @RenderSection("scripts", required: false)

</head>
<body>
    <div class="navbar navbar-theme navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Meu Ecommerce", "Index", "", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Sobre", "Sobre", "")</li>
                    <li>@Html.ActionLink("Contato", "Contato", "")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <a class="basket">
            <span>Carrinho: </span>
            @if (ViewBag.CarrinhoDeCompras != null)
            { @ViewBag.CarrinhoDeCompras.QuantidadeDeItens}
            else { @String.Format("{0}", 0) }
            <table>
                @if (ViewBag.CarrinhoDeCompras != null)
                {
                    foreach (var c in ViewBag.CarrinhoDeCompras.Itens)
                    {
                        <tr><td>@c.Value.Quantidade x @String.Format("{0:c}", c.Value.PrecoUnitario)</td><td>@c.Value.NomeDoProduto</td></tr>
                    }
                }

                <tr>
                    <td>
                        Total:
                        @if (ViewBag.CarrinhoDeCompras != null)
                        { @String.Format("{0:c}", ViewBag.CarrinhoDeCompras.PrecoTotal)}
                        else
                        { @String.Format("{0:c}", 0)}
                    </td>
                    <td>@Html.ActionLink("Finalizar", "Index", "Checkout")</td>
                </tr>
            </table>
        </a>

        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Meu Ecommerce</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
